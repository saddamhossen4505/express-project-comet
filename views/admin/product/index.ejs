




<div class="container my-5">
    <div class="row d-flex">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2>All Product Data-Table.</h2>
                    <hr>
                    <table class="table striped Slider_Table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Price</th>
                                <th>Images</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% allProduct.reverse().forEach((product, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index + 1 %> </td>
                                    <td><%= product.title %> </td>
                                    <td>$<%= product.price %> </td>
                                    <td><img src="/images/productPhoto/<%= product.photo %> " alt=""></td>
                                    <td>
                                        <a class="btn btn-sm btn-info" href="/admin/product/<%= product.id %> "><i class="fas fa-eye"></i></a>
                                        <a class="btn btn-sm btn-warning" href="/admin/product/edit/<%= product.id %>"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-sm btn-danger delete_btn" href="/admin/product/delete/<%= product.id %>"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2>Add Product</h2>
                    <hr>
                    <form action="/admin/product" method="post" class="Slider_form" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="">Title</label>
                            <input name="title" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Price</label>
                            <input name="price" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Product Photo</label>
                            <br>
                            <label for="upload_sliderIMG">
                                <img src="https://static.thenounproject.com/png/1156518-200.png" alt="">
                            </label>
                            <br>
                            <img style="max-width: 100%;" id="preview_img" src="" alt="">
                            <br>
                            <input name="product_img_upload" id="upload_sliderIMG" type="file" class="form-control">
                        </div>
                        <div class="my-3">
                            <input type="submit" value="Add Now" class="btn btn-primary btn-sm w-100">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>